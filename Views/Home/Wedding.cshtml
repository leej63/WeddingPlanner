@model Wedding

<div class="row">
    <div class="col-9">
        <h1>Plan your Wedding</h1>
    </div>
    <div class="col">
        <a href="/logout" class="mx-4" style="float: right;">Log Out</a>
        <a href="/dashboard" class="mx-4" style="float: right;">Dashboard</a>
    </div>
</div>
<div class="row">
    <div class="col-4">
        <div>
            <form asp-action="CreateWedding" asp-controller="Home" method="post">
                <span asp-validation-for="WedderOne"></span><br>
                <label asp-for="WedderOne"></label>
                <input asp-for="WedderOne" class="form-control"><br>
                <span asp-validation-for="WedderTwo"></span><br>
                <label asp-for="WedderTwo"></label>
                <input asp-for="WedderTwo" class="form-control"><br>
                <span asp-validation-for="Date"></span><br>
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control"><br>
                <span asp-validation-for="Address"></span><br>
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control"><br>
                <button class="btn btn-primary form-control" type="submit">Create</button>
            </form>
        </div>
    </div>
    <div class="col"></div>
</div>